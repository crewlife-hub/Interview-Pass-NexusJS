{
  "$schema": "https://turbo.build/json-schema.json",
  "globalDependencies": ["**/.env.example"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "tests/**", "jest.config.js"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
